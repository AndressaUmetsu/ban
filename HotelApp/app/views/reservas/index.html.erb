<p id="notice"><%= notice %></p>

<h1>Reservas</h1>

<table class="table">
  <thead>
    <tr>
      <th>Data Reserva</th>
      <th>Data Checkin</th>
      <th>Data Checkout</th>
      <th>Valor da Entrada</th>
      <th>Cliente</th>
      <th>Quarto</th>
      <th>Hotel</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservas.each do |reserva| %>
      <tr>
        <td><%= reserva.data_reserva %></td>
        <td><%= reserva.data_checkin %></td>
        <td><%= reserva.data_checkout %></td>
        <td><%= reserva.valor_entrada %></td>
        <td><%= reserva.cliente.id %></td>
        <td><%= reserva.quarto.id %></td>
        <td><%= reserva.hotel.id %></td>
        <td><%= link_to 'Show', reserva %></td>
        <td><%= link_to 'Edit', edit_reserva_path(reserva) %></td>
        <td><%= link_to 'Destroy', reserva, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

