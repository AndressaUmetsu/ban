<p id="notice"><%= notice %></p>

<h1>Reservas</h1>

<table class="table">
  <thead>
    <tr>
      <th>Datareserva</th>
      <th>Datacheckin</th>
      <th>Datacheckout</th>
      <th>Valorentrada</th>
      <th>Cliente</th>
      <th>Quarto</th>
      <th>Hotel</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservas.each do |reserva| %>
      <tr>
        <td><%= reserva.dataReserva %></td>
        <td><%= reserva.dataCheckIn %></td>
        <td><%= reserva.dataCheckOut %></td>
        <td><%= reserva.ValorEntrada %></td>
        <td><%= reserva.Cliente %></td>
        <td><%= reserva.Quarto %></td>
        <td><%= reserva.Hotel %></td>
        <td><%= link_to 'Show', reserva %></td>
        <td><%= link_to 'Edit', edit_reserva_path(reserva) %></td>
        <td><%= link_to 'Destroy', reserva, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

